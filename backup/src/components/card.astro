---
interface Props{
    cardTitle: string;
    cardDate?: string;
    cardLink: string;
    cardAuthor: string;
}

const {cardTitle = 'Titulo por defecto', cardDate = "Sin fecha especificada.", cardLink = "#", cardAuthor = "Autor desconocido"} = Astro.props;
---

<div class="blog-card flex flex-col">
    <h2 class="card-text font-serif font-normal text-2xl">{cardTitle}</h2>
    <span class="card-details"><i class="fa fa-calendar"></i>{cardDate}</span>
    <p class="card-text font-serif font-normal text-lg">Autor: {cardAuthor}</p>
    <a href={cardLink} class="read-more">Leer</a>
</div>

<style>

    .blog-card{
        width: 50%;
        margin:15px auto;
        background:#fff;
        border:1px solid #812626;
        text-align:center;
        align-items: center;
        justify-content: center;
        padding: 15px;
    }

    .blog-card a{
        text-decoration: none;
    }

    .blog-card:hover, .blog-card:active{
        transition: (0.5s);
        box-shadow: 0 3px 10px 0 rgba(0,0,0,.1);
        -webkit-transition: (0.5s);
        -moz-transition: (0.5s);
        -ms-transition: (0.5s);
        -o-transition: (0.5s);
    }

    .card-details{
        color:#3C3C3C;
        padding: 10px
    }

    .card-details i{
        margin-right:5px;
    }
            
    .card-text{
        padding:15px 15px;
        line-height:30px;
        /* font-size: 25px; */
    }

    .read-more{
        width:auto;
        margin: 0 auto;
        text-align:center;
        text-transform:uppercase;
        background:#812626;
        color:#fff;
        padding:15px;
    }

    .read-more:hover{
        transition: 0.3s;
        -webkit-transition: 0.3s;
        -moz-transition: 0.3s;
        -ms-transition: 0.3s;
        -o-transition: 0.3s;
        background: darken(#CB6074,20%);
    }

</style>
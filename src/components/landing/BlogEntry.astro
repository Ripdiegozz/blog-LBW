---
import { environment } from "@/environments/enviroment.develop";

const { author, title, description, imageSrc, slug } = Astro.props;
---

<a href={`blog/post/${slug}`} class="group relative block bg-black w-60 lg:w-80 xl:w-92 h-96">
  <img
    alt={title}
    src={`${environment.imagesUrl}${imageSrc}`}
    class="absolute inset-0 h-full w-full object-cover opacity-50 transition-opacity group-hover:opacity-35"
  />

  <div class="relative p-4 sm:p-6 lg:p-8">
    <p class="text-sm font-bold uppercase tracking-widest text-red-400">
      {author}
    </p>

    <p class="text-xl font-bold text-white sm:text-2xl">{title}</p>

    <div class="mt-32 sm:mt-48 lg:mt-40">
      <div
        class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
      >
        <p class="text-sm text-white">
          {description}
        </p>
      </div>
    </div>
  </div>
</a>

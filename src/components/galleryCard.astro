---
interface Props{
    cardTitle: string;
    cardLink: string;
}

const {cardTitle = 'Titulo por defecto', cardLink = "#"} = Astro.props;
---

<div class="blog-card flex flex-col w-[30%] h-[200px] m-[15px] bg-white text-center items-center justify-center p-[15px] border-[1px] min-[320px]:max-[1023px]:w-[80%]">
    <h2 class="card-text font-serif font-normal">{cardTitle}</h2>
    <a href={cardLink} class="read-more">Entrar</a>
</div>

<style>

    .blog-card{
        border-color: #812626;
    }

    .blog-card a{
        text-decoration: none;
    }

    .blog-card:hover, .blog-card:active{
        transition: (0.5s);
        box-shadow: 0 3px 10px 0 rgba(0,0,0,.1);
        -webkit-transition: (0.5s);
        -moz-transition: (0.5s);
        -ms-transition: (0.5s);
        -o-transition: (0.5s);
    }
            
    .card-text{
        padding:20px 20px;
        line-height:30px;
        font-size: 25px;
    }

    .read-more{
        width:auto;
        margin: 0 auto;
        text-align:center;
        text-transform:uppercase;
        background:#812626;
        color:#fff;
        padding:10px;
    }

    .read-more:hover{
        transition: 0.3s;
        -webkit-transition: 0.3s;
        -moz-transition: 0.3s;
        -ms-transition: 0.3s;
        -o-transition: 0.3s;
        background: darken(#CB6074,20%);
    }

</style>
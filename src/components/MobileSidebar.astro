---
import { Menu, X } from "lucide-react";
import HeaderLink from "./HeaderLink.astro";
---

<div class="drawer">
  <input id="mobile-sidebar" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <label for="mobile-sidebar" class="btn btn-link text-black drawer-button">
      <Menu size="24" />
    </label>
  </div>
  <div class="drawer-side">
    <label
      for="mobile-sidebar"
      aria-label="Cerrar Menú Lateral"
      class="drawer-overlay"></label>
    <ul class="menu p-4 w-80 min-h-full bg-white text-base-content">
      {/* Sidebar content here */}
      <div class="flex w-full justify-between">
        <a href="/" class="flex items-center py-6">
          <h1 class="text-3xl font-bold">Fundaleón</h1>
        </a>
        <label
          for="mobile-sidebar"
          class="btn btn-link text-black drawer-button py-6"
        >
          <X size="24" />
        </label>
      </div>
      <div
        class="internal-links flex flex-col flex-wrap w-full h-full gap-6 justify-around"
      >
        <HeaderLink href="/">Inicio</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="#">Historial</HeaderLink>
        <HeaderLink href="/galeria"> Galería </HeaderLink>
        <HeaderLink href="/publicaciones"> Publicaciones </HeaderLink>
        <HeaderLink href="/biblioteca">Biblioteca</HeaderLink>
        <HeaderLink href="#">Sobre Nosotros</HeaderLink>
        <HeaderLink href="/contacto">Contacto</HeaderLink>
      </div>
    </ul>
  </div>
</div>

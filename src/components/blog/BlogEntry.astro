---
import FormattedDate from "../FormattedDate.astro";
import { environment } from "@/environments/enviroment.develop";
const { title, pubDate, description, cover, slug } = Astro.props;
---

<a
  class="group space-y-2 hover:bg-rose-50/45 transition-colors p-4 rounded-lg border block max-w-[320px] md:p-6 md:max-w-xs lg:max-w-md mx-auto w-full"
  href={`/blog/post/${slug}`}
>
  <h2 class="text-2xl font-bold tracking-tight break-words overflow-hidden text-overflow-ellipsis">
    {title}
  </h2>
  <p class="text-gray-500 dark:text-gray-400">
    <FormattedDate date={new Date(pubDate)} />
  </p>
  <p class="break-words overflow-hidden text-overflow-ellipsis min-h-[100px]">
    {description}
  </p>
  <div class="w-full py-6">
    <img
      src={`${environment.imagesUrl}${cover.url}`}
      alt={cover.alternativeText}
      class="rounded-lg w-full h-[250px] mx-auto border border-slate-400/75" />
  </div>
  <p
    class="text-md font-bold text-white btn btn-secondary group-hover:underline ml-4 p-4 w-40"
  >
    Ver m√°s
  </p>
</a>

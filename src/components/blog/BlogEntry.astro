---
import FormattedDate from "../FormattedDate.astro";
import { environment } from "@/environments/enviroment.develop";
const { title, pubDate, description, cover, slug } = Astro.props;

console.log({
  title,
  pubDate,
  description,
  cover,
});
---

<div
  class="group space-y-2 hover:bg-rose-50/45 transition-colors p-6 rounded-lg border"
>
  <a class="font-medium" href={`/blog/post/${slug}`}>
    <h2 class="text-2xl font-bold tracking-tight">
      {title}
    </h2>
  </a>
  <p class="text-gray-500 dark:text-gray-400">
    <FormattedDate date={new Date(pubDate)} />
  </p>
  <p class="min-h-[100px]">
    {description}
  </p>
  <div class="w-full py-6">
    <a
      data-fslightbox="fslightbox"
      href={`${environment.imagesUrl}${cover.url}`}
    >
      <img
        src={`${environment.imagesUrl}${cover.url}`}
        alt={cover.alternativeText}
        class="rounded-lg w-full h-auto mx-auto"
      />
    </a>
  </div>
  <a href={`/blog/post/${slug}`} class="hover:underline transition text-lg group-hover:underline">
    Leer m√°s
  </a>
</div>

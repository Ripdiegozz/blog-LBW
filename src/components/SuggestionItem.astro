---
import FormattedDate from "./FormattedDate.astro";

const { title, slug, pubDate } = Astro.props;
---

<li class="suggestedResult p-2 max-w-96">
  <a
    href=`/blog/post/${slug}`
    class="font-bold text-lg flex justify-between p-2 max-w-96 hover:bg-slate-100 transition-colors rounded-md border border-slate-100"
  >
    <div class="flex flex-col justify-center gap-4 h-full max-w-96">
      <h2
        class="!text-xl font-bold text-wrap break-words whitespace-pre-wrap w-full text-ellipsis"
      >
        {title}
      </h2>
      <p class="text-sm text-gray-500">
        <FormattedDate date={new Date(pubDate)} />
      </p>
    </div>
  </a>
</li>
